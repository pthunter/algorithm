# print "this is a debug message"

def solution(A):
    N = len(A)
    M = 0
    for i in xrange(N):
        A[i] = abs(A[i])
        M = max(A[i], M)
    S = sum(A)
    count = [0] * (M + 1)
    for i in xrange(N):
        count[A[i]] += 1
    dp = [-1] * (S + 1)
    dp[0] = 0
    for a in xrange(1, M + 1):
        if count[a] > 0:
            for j in xrange(S):
                if dp[j] >= 0:
                    dp[j] = count[a]
                elif (j >= a and dp[j - a] > 0):
                    dp[j] = dp[j - a] - 1
    result = S
    for i in xrange(S // 2 + 1):
        if dp[i] >= 0:
            result = min(result, S - 2 * i)
    return result



def min_abs_sum_slow(A):
    N = len(A)
    M = 0
    for i in xrange(N):
        A[i] = abs(A[i])
        M = max(A[i], M)
    S = sum(A)
    dp = [0] * (S + 1)
    dp[0] = 1
    for j in xrange(N):
        for i in xrange(S, -1, -1):
            if (dp[i] == 1) and (i + A[j] <= S):
                dp[i + A[j]] = 1
    result = S
    for i in xrange(S // 2 + 1):
        if dp[i] == 1:
            result = min(result, S - 2 * i)
    return result
